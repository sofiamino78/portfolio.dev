---
import NextJS from './icons/NextJS.astro';
import Tailwind from './icons/Tailwind.astro';
import React from './icons/React.astro';
const TAGS = {
    NEXT: {
        name: 'Next.js',
        class: 'bg-black text-white',
        icon: NextJS,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind,
    },
    REACT: {
        name: 'React',
        class: 'bg-black text-white',
        icon: React,
    }

}
const PROJECTS = [
    {
        title: 'Hotel Management System',
        description: 'Lorem ipsum',
        link: '#',
        github: 'https://github.com/sofiamino78/hotel-management',
        image: '/projects/HotelProject.webp',
        tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.REACT]
    },
]
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-4 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/12" src={image} alt={`Captura de pantalla del proyecto ${image}`} />
        </article>
    ))
}